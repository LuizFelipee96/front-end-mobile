<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"/>

            <TextView
                android:layout_width="430dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Dicas de Suplementaçâo"
                android:textColor="#64CCC5"
                android:textSize="22sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_background">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#64CCC5"
                    android:layout_marginTop="10dp"
                    android:text="Creatina"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="8dp"
                    android:text="- Substância natural encontrada nos músculos do corpo, geralmente obtida a partir de fontes de carne ou suplementos. "
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="8dp"
                    android:text="- Aumenta a capacidade de trabalho muscular, melhorando a força e potência. Ideal para treinos de alta intensidade e curtos."
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/white"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="380dp"
                android:background="@drawable/rounded_background"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Whey Protein"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    android:text="- Suplemento de proteína derivado do soro do leite."
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="8dp"
                    android:padding="10dp"
                    android:text="- Ajuda na recuperação muscular pós-treino e fornece uma fonte rápida de proteína de alta qualidade."
                    android:textSize="16sp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:background="@drawable/rounded_background"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Pré-treino"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    android:text="- Suplemento formulado para ser consumido antes do treino."
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="8dp"
                    android:padding="10dp"
                    android:text="- Contém ingredientes como cafeína, beta-alanina e arginina para aumentar a energia, foco e resistência."
                    android:textSize="16sp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

